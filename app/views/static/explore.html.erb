<section class="section could-use-section">
  <div class="container"
       data-controller="text-filter"
       data-text-filter-hidden-class="is-hidden">
    <section class="section">
      <label class="label">Filter Could Use Tags:</label>
              
      <%= text_field_tag("search", "", placeholder: "'Drums', 'Vocals', etc",
                          type: "search", class: "input is-primary", autofocus: true,
                          "data-text-filter-target": "filterInput",
                          "data-action": "input->text-filter#filter") %> 
      
    </section>

    <section class="section">
      <div class="columns is-multiline">
        <% @rooms.each do |room| %>
          <div class="column is-4" data-text-filter-target="roomTile">
            <%= render 'room_tile', room: room %>
          </div>
        <% end %>
      </div>
    </section>

    <% if path_to_next_page(@rooms) %>
      <section class="section">
        <div class="box">
          <%= paginate @rooms, class: 'pagination' %>
        </div>
      </section>
    <% end %>
  </div>
</section>


